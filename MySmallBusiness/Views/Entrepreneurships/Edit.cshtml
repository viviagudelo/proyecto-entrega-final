@model MySmallBusiness.Models.Entrepreneurship

@{
    ViewBag.Title = "Edit";
}

<img src="~/Content/Images/banner.png" style="width: 600px; height: 170px; padding: 7px; margin-left: 24%; background-color: black;" />
<br />
<br />
