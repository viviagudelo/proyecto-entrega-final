@{
    ViewBag.Title = "My Small Business";
}

<header id="gtco-header" class="gtco-cover" role="banner" style="background-image:url(images/img_banner.png);">
    <div class="gtco-container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center">
                <div class="display-t">
                    <div class="display-tc animate-box" data-animate-effect="fadeIn">
                        <br />
                        <img src="~/Content/Images/banner.png" style="width: 600px; height: 170px; padding: 7px; background-color:black"/>
                        <br />
                        <h2 style="font-family: -webkit-body; font-size: xx-large; font-weight: 700; color:black; background-color:darkgrey;"> Un lugar para emprendedores cómo tú! </h2>
                        <br />
                        <br />
                        <br />
                        <br />

                        <div class="container">
                                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                                <!-- Indicators -->
                                <ol class="carousel-indicators">
                                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                    <li data-target="#myCarousel" data-slide-to="1"></li>
                                    <li data-target="#myCarousel" data-slide-to="2"></li>
                                    <li data-target="#myCarousel" data-slide-to="3"></li>
                                    <li data-target="#myCarousel" data-slide-to="4"></li>
                                    <li data-target="#myCarousel" data-slide-to="5"></li>
                                    <li data-target="#myCarousel" data-slide-to="6"></li>
                                    <li data-target="#myCarousel" data-slide-to="7"></li>
                                </ol>

                                <!-- Wrapper for slides -->
                                <div class="carousel-inner">
                                    <div class="item active">
                                        <img src="~/Content/Images/pregfinal.png" style="width:100%;">
                                    </div>

                                    <div class="item">
                                        <img src="~/Content/Images/arepa.png" alt="Comida Venezolanda" style="width:100%;">
                                    </div>

                                    <div class="item">
                                        <img src="~/Content/Images/tequeños.png" alt="Comida Venezonala" style="width:100%;">
                                    </div>

                                    <div class="item">
                                        <img src="~/Content/Images/navidad1.png" alt="Comida Venezolana" style="width:100%;">
                                    </div>

                                    <div class="item">
                                        <img src="~/Content/Images/camisa1.png" alt="Diseño Venezolano" style="width:100%;">
                                    </div>

                                    <div class="item">
                                        <img src="~/Content/Images/gorra1.png" alt="Diseño Venezolano" style="width:100%;">
                                    </div>

                                    <div class="item">
                                        <img src="~/Content/Images/bis1.png" alt="Diseño Venezolano" style="width:100%;">
                                    </div>
                                        </div>

                                <!-- Left and right controls -->
                                <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="right carousel-control" href="#myCarousel" data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                        <br />
                        <br />
                        <br />
                        <br />
                        <p><a class="btn" href="@Url.Action("Index", "Entrepreneurships")"; style="padding:20px; font-size:xx-large;">Emprendedor</a></p>
                        <br />
                        <p><a href="@Url.Action("Index", "Entrepreneurships")" class="btn" style="padding:20px; font-size:xx-large;">Cliente</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
</header>

<br />

    <div id="gtco-features">
        <div class="gtco-container">
            <div class="row">
                <div class="col-md-3 col-sm-3 cuadro">
                    <div class="feature-center animate-box" data-animate-effect="fadeIn">
                        <div class="iconContenedor"><span class="glyphicon glyphicon-time iconItem"></span></div>
                        <h3 class="titulo">Rápido</h3>
                        <p class="parrafo" style="color:white;"> Registra toda la información de tu emprendimiento en minutos y hazte conocer en Argentina.</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-3 cuadro">
                    <div class="feature-center animate-box" data-animate-effect="fadeIn">
                        <span class="icon">
                            <i class="icon-command"></i>
                        </span>
                        <div class="iconContenedor"><span class="glyphicon glyphicon-ok iconItem"></span></div>
                        <h3 class="titulo">Sencillo</h3>
                        <p class="parrafo" style="">Muchos clientes podrán encontrar productos y servicios de manera rápida y fácil.</p>
                    </div>
                </div>
                <div class="col-md-3 col-sm-3 cuadro">
                    <div class="feature-center animate-box" data-animate-effect="fadeIn">
                        <span class="icon">
                            <i class="icon-power"></i>
                        </span>
                        <div class="iconContenedor"><span class="glyphicon glyphicon-tag iconItem"></span></div>
                        <h3 class="titulo">Gratis</h3>
                        <p class="parrafo">No necesitas pagar nada! Nuestro servicio es completamente gratuito. Aprovéchalo!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
